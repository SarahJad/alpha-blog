<h1 align="center"> Create new category </h1>



<ul>
<% if @category.errors.any? %>

<h2> The following errors prevented the Category from getting Created </h2>
    <% @category.errors.full_messages.each do |msg| %>
        <li>   <%= msg %> </li>
        <% end %>
<% end %>
</ul>

<%= form_for @category do |f| %>
    <p> 
        <%= f.label :name %> <br/>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Category ", autofocus: true %>
    </p>


    <p>
        <%= f.submit%>
    </p>

<% end %>

<%= link_to "Back to Home", root_path %>

